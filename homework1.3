import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int N = in.nextInt();
        int a = N/60;
        if (( N%60<10 ) && (a%60<10)){
            System.out.println(N/3600+":"+"0"+ a%60 +":0" + N%60);
        }else if (a%60<10){
            System.out.println(N/3600+":"+"0" +a%60 +":" + N%60);
        }else if (N%60<10){
            System.out.println(N/3600+":"+ a%60 +":0" + N%60);
        }else {
            System.out.println(N/3600+":"+a%60 +":" + N%60);
        }

    }
}
